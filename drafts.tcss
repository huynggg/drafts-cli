Screen {
	background: black;
}
Input {
	width: 100%;
	height: 12%;
}
Label.draft-item {
	content-align: left top;
	border: solid white 50%;
	width: 100%;
	padding: 0;
	min-height: 5fr;
	max-height: 5fr;
}
Label:focus {
	background: red;
}

ItemList {
	margin: 0;
	padding: 0;
}

SideBar {
	max-width: 20vw;
	dock: left;
}

DraftsList {
	border: solid #f2c973 40%;
	border-title-align: left;
	background: black;
}

#editor:focus, #draft-list:focus {
	border: solid #f2c973;
}

#editor {
	border-title-align: left;
	border: solid #f2c973 40%;
	background: black;
}

#search {
	margin: 1 0;
	background: black;
	border: solid #f2c973 40%;
}
#search:focus {
	border: solid #f2c973;
}

ConfirmationModal {
	align: center middle;
}

ConfirmationModal > Container {
	width: auto;
	height: auto;
}
